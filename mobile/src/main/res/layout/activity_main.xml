<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.parasita.sussemfila.MainActivity">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logoprincipal"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="LOGIN"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/inputtop"
            android:hint="CPF/Nº SUS"
            android:inputType="number"
            android:numeric="integer"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:textSize="18dp" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/inputdown"
            android:hint="SENHA"
            android:inputType="textPassword|numberPassword"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:password="true"
            android:textSize="18dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="ENTRAR"
            android:textColor="@color/white"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/cadastrese"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:clickable="true"
            android:text="Não é cadastrado? Cadastre-se"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/versaoapp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="60dp"
            android:text=" Versao 1.0.0"
            android:textSize="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text=" @2018, SUS SEM FILA, TODOS OS DIREITOS RESERVADOS"
            android:textSize="10dp" />
    </LinearLayout>




</LinearLayout>
