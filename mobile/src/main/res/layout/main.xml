<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.parasita.sussemfila.main">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logoprincipal"
            android:contentDescription="TODO" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linha1"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_below="@+id/top">

        <Button
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/botaoconsultacadastro"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="normal" />

        <Button
            android:layout_width="165dp"
            android:layout_height="145dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/botaoconsultaagendadas"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linha2"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linha1"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginStart="20dp"
            android:layout_weight=""
            android:background="@drawable/Botaohistorico"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="normal" />

        <Button
            android:layout_width="159dp"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/botaoconfiguracoes"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="normal" />

    </LinearLayout>


</LinearLayout>
