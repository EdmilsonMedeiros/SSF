<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:src="@drawable/logomain"
            />

        <TextView
            android:id="@+id/tvEspecialidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imageView"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Especialidade"
            />

        <TextView
            android:id="@+id/tvData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/imageView"
            android:textColor="@color/black"
            android:text="28-07-1997"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/Agendadas_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvData"
            android:layout_marginTop="35dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:text="18:00:00"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:paddingEnd="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="Em andamento"
            />
        <TextView
            android:id="@+id/Agendadas_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital da CrianÃ§a"
            android:textSize="15dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginTop="58sp"
            />

        <RelativeLayout
            android:id="@+id/Agendadas_barraNav"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/imageView"
            >

            <Button
                android:id="@+id/Agendadas_ButtonCancelar"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Cancelar"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
